---
import Logo from "./Logo.astro";
---
<header class="header">
    <Logo />
    <nav class="nav">
        <a href="/about">About</a>
        <a href="/#projects">Projects</a>
        <a href="#contact">Contacts</a>
    </nav>
</header>

<style>
    .header {
        max-width: 120rem;
        height: 5.6rem;
        margin: 0 auto;

        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav {
        font-size: 1.8rem;
        font-family: 'Raleway', sans-serif;
        font-weight: 500;
        line-height: 155%;
        color: var(--color-secondary-high);

        display: flex;
        gap: 4.8rem;

        a {
            color: inherit;
        }
    }
</style>